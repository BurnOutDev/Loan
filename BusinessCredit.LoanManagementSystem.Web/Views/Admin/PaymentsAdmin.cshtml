                @Html.DisplayFor(modelItem => item.PaidPrincipal)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PayableInterest)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PayablePrincipal)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PlannedBalance)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PrincipalPrepaid)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PrincipalPrepaymant)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.StartingBalance)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.StartingPlannedBalance)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.WholeDebt)
            </th>
            <td>
                @if (item.PaymentDate == DateTime.Today)
                {
                    <a onclick="window.location.href='../Admin/PaymentDelete?id=@item.PaymentID&branch=' + cbxBranches.selectedIndex" class="text-danger">წაშლა</a> @*IndexAdmin*@
                }
                <a onclick="window.location.href='../Admin/PaymentChangePenalty?id=@item.PaymentID&branch=' + cbxBranches.selectedIndex">ჯარიმის პატიება</a> @*ChangePenalty*@
            </td>
        </tr>
    }

</table>

<script>
    if (localStorage.getItem('branchID') != null) {
        cbxBranches.selectedIndex = localStorage.getItem('branchID');
    }
</script>
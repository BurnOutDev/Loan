        <th>
            @Html.DisplayNameFor(model => model.CurrentPenalty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentPrincipalPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidInterest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidPenalty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidPrincipal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayableInterest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayablePrincipal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlannedBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrincipalPrepaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrincipalPrepaymant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartingPlannedBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WholeDebt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.Account.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.Account.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.Account.PrivateNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.Account.AccountID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.LoanID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxOrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanBalance)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingInterestPayment)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingOverdueInterest)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingOverduePrincipal)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingPenaltyPayment)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingPrincipalPayment)
            </th>
            <th>
                @*@Html.DisplayFor(modelItem => item.Branch.BranchName)*@
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.CurrentDebt)
            </th>

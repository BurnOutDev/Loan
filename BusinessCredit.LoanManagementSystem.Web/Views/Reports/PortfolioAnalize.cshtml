@model IEnumerable<BusinessCredit.Domain.Payment>

@{
    ViewBag.Title = "გადახდების რეპორტი";
}

<style>
    tr .spaceUnder{
        padding-bottom: 100em;
    }
</style>

<h2>Index</h2>

<script>
    function redirectDaily() {
        window.location.href = "?displayDate=" + displayDate.value;
    }
</script>

<input type="date" id="displayDate" />

<button onclick="redirectDaily()" type="button">Go</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loan.LoanAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentDebt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidInterest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidPenalty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidPrincipal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoanBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlannedBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccruingOverdueInterest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccruingPenalty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccruingInterestPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PayableInterest)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Loan.LoanAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentPayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentDebt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidInterest)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.PaidPenalty)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PaidPrincipal)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.LoanBalance)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PlannedBalance)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingOverdueInterest)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingPenalty)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.AccruingInterestPayment)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PayableInterest)
            </th>
        </tr>
    }


    <tr class="spaceUnder"></tr> 

    <tr>
        <th>
            @Model.Sum(model => model.Loan.LoanAmount)
        </th>
        <th>
            @Model.Sum(model => model.CurrentPayment)
        </th>
        <th>
            @Model.Sum(model => model.CurrentDebt)
        </th>
        <th>
            @Model.Sum(model => model.PaidInterest)
        </th>
        <th>
            @Model.Sum(model => model.PaidPenalty)
        </th>
        <th>
            @Model.Sum(model => model.PaidPrincipal)
        </th>
        <th>
            @Model.Sum(model => model.LoanBalance)
        </th>
        <th>
            @Model.Sum(model => model.PlannedBalance)
        </th>
        <th>
            @Model.Sum(model => model.AccruingOverdueInterest)
        </th>
        <th>
            @Model.Sum(model => model.AccruingPenalty)
        </th>
        <th>
            @Model.Sum(model => model.AccruingInterestPayment)
        </th>
        <th>
            @Model.Sum(model => model.PayableInterest)
        </th>
    </tr>
</table>
